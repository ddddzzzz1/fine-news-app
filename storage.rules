rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    function signedIn() {
      return request.auth != null;
    }

    match /student-ids/{folder}/{fileName} {
      function ownsFolder() {
        return signedIn() && folder.matches('.*_' + request.auth.uid);
      }
      allow read: if ownsFolder();
      allow write: if ownsFolder();
    }

    match /community_posts/{uid}/{fileName} {
      allow read: if true;
      allow write: if signedIn() && request.auth.uid == uid;
    }

    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
